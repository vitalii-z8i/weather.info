.page-header
  %h1=t '.title', :default => 'Find local weather'

- model_class = Search
.page-header
= render :partial => "form"
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @searches.each do |search|
      %tr
        %td= search.id
        %td= search.user_id
        %td=l search.created_at
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), search_path(search), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
