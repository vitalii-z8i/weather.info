- model_class = Search
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @search.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), search_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_search_path(@search), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), search_path(@search), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
